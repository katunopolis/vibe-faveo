{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "minimal-dockerfile"
  },
  "deploy": {
    "startCommand": "/usr/local/bin/bootstrap.sh",
    "healthcheckPath": "/public/health.php",
    "healthcheckTimeout": 180,
    "restartPolicyType": "ON_FAILURE"
  }
} 